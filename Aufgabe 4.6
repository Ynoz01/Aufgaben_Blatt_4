package uebungsblatt4;

import java.util.Arrays;
import java.util.Scanner;

public class Uebung46 
{

	public static void main(String[] args) 
	{
		Scanner sc = new Scanner(System.in);
		System.out.println("Bitte n eingeben (n ungerade, 2 < n < 10):");
		int n = sc.nextInt();										//Einlesen des Wertes von n

		while(n<=2 || n>=10 || n%2 == 0)										//Bedingung n muss größer als 2 aber kleiner als 10 sein und ungerade
		{	
			System.out.println("Bitte n eingeben (n ungerade, 2 < n < 10):");	//Eingabe solange wiederholen bis n einen richtigen Wert hat
			n = sc.nextInt();
		}
		int[][]quad = new int [n][n];								//Erstellen eines zweidimensionalen Arrays der größe n
		 
		int zeile = n/2;											
		int spalte = n/2 + 1;
		int m = 0;
		
		while(m < n*n)													//Solange m kleiner als n² ist wird die Schleife ausgeführt
		{
			for(int i = 0; i < n; i++)									//Grenze muss bei n liegen, da Zeile und Spalte bearbeiten werden und somit die Schleife frühzeitig aufhören würde
			{	
				for(int j = 0; j < n; j++)								//Selbiges wie für erste Schleife
				{	
					m = m+1;											//Inkrementierung von m
					quad[zeile][spalte] = m;							//Eintragen von m an der aktuellen Position des Arrays
					zeile = zeile - 1;									//Dekrement von Zeile
					spalte = spalte + 1;								//Inkrement von Spalte
					
					if(zeile < 0)										//Wenn zeile den Zahlenbereich verlässt (also kleiner 0) wird zeile der Wert n-1 zugewiesen 
					{
						zeile = n-1;
					}
					if(spalte > n-1)									//Wenn spalte den Zahlenbereich von n-1 verlässt wird zeile der Wert 0 zugewiesen 
					{
						spalte = 0;
					}
					if(quad[zeile][spalte] != 0)						//Wenn schon ein Wert an der aktuellen Stelle steht soll Zeile und Spalte inkrementiert werden
					{
						zeile = zeile + 1;
						spalte = spalte + 1;
						
						if(zeile > n-1)									//Wenn durch die Inkrementierung die Zeile größer als n ist wird zeile gleich 0 gesetzt
						{
							zeile = 0;
						}
						if(spalte > n-1)								//siehe Zeile
						{
							spalte = 0;
						}
					}
				}
			}
		}
		for(int i = 0; i < quad.length; i++)			//aüßere for-Schleife bestimmt das Teilarray
		{	
														
			for(int j = 0; j < quad[i].length; j++)		//innere for-Schleife bestimmt Element aus Teilarray
			{	
				if(quad[i][j] > 9)
				{
					System.out.print("  " + quad[i][j]); 
				}
				else
				{
					System.out.print("   " + quad[i][j]); //Ausgabe des j'ten Element der i'ten Teilmenge
				}
				    
		    }
		  System.out.println();
		}
	}
}
